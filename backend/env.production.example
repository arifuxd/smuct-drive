# SMUCT Drive Production Environment Configuration
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=production
PORT=5000

# Google Drive API Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:5000/auth/google/callback
GOOGLE_DRIVE_FOLDER_ID=your_google_drive_folder_id_here

# Session Configuration (for production, use a strong secret)
SESSION_SECRET=your_very_strong_session_secret_here

# Application Password (for bypassing Google login)
APP_PASSWORD=your_secure_app_password_here

# CORS Configuration (update for production domain)
CORS_ORIGIN=http://localhost:3000

# File Upload Limits
MAX_FILE_SIZE=2000MB

# Security Headers
HELMET_ENABLED=true

# Logging Level (error, warn, info, debug)
LOG_LEVEL=error
